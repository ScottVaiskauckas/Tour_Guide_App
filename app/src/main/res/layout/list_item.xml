    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_view">

    <ImageView
        android:id="@+id/image"
        style="@style/list_item_image_view"/>

    <TextView
        android:id="@+id/name_text_view"
        style="@style/list_item_name_text_view"/>

    <TextView
        android:id="@+id/description_text_view"
        style="@style/list_item_description_text_view"/>
</RelativeLayout>